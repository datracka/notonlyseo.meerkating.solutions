---
import { ANALYTICS } from '~/utils/config';

const facebookPixelId = ANALYTICS?.vendors?.facebookPixel?.id;
---

<!-- Meta Pixel Code -->
<script is:inline define:vars={{ facebookPixelId }}>
  !(function (f, b, e, v, n, t, s) {
    if (f.fbq) return;
    n = f.fbq = function () {
      n.callMethod ? n.callMethod.apply(n, arguments) : n.queue.push(arguments);
    };
    if (!f._fbq) f._fbq = n;
    n.push = n;
    n.loaded = !0;
    n.version = '2.0';
    n.queue = [];
    t = b.createElement(e);
    t.async = !0;
    t.src = v;
    s = b.getElementsByTagName(e)[0];
    s.parentNode.insertBefore(t, s);
  })(window, document, 'script', 'https://connect.facebook.net/en_US/fbevents.js');
  // eslint-disable-next-line no-undef
  fbq('init', '657952046526113');
  // eslint-disable-next-line no-undef
  fbq('track', 'PageView');
</script>
<noscript is:inline define:vars={{ facebookPixelId }}
  ><img
    height="1"
    width="1"
    style="display:none"
    src={`https://www.facebook.com/tr?id=${facebookPixelId}&ev=PageView&noscript=1`}
  /></noscript
>
